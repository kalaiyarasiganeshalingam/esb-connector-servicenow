          },
          {
            "type": "attribute",
            "value": {
              "name": "sysparmExcludeReferenceLink",
              "displayName": "Exclude Reference Link",
              "inputType": "stringOrExpression",
              "required": "false",
              "helpTip": "Exclude reference link details from the response (true/false)."
