          },
          {
            "type": "attribute",
            "value": {
              "name": "sysparmReadReplicaCategory",
              "displayName": "Read Replica Category",
              "inputType": "stringOrExpression",
              "required": "false",
              "helpTip": "Category to route the read request to a read-replica node."
